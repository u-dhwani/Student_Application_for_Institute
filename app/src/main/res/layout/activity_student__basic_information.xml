<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Student.Student_Basic_information"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center|center_vertical"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="0dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:background="#A4CEEF"
            android:layout_weight="0.5"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:id="@+id/basic_information"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="true"
            app:contentPadding="10dp"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="50dp"
            tools:ignore="MissingConstraints"
            >
            <LinearLayout
                android:background="#A4CEEF"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="0dp"
                android:gravity="center|center_vertical"
                android:orientation="vertical"
                tools:ignore="MissingConstraints"
                >
                <TextView
                    android:id="@+id/student_title"
                    android:drawablePadding="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:textAlignment="center"
                    android:textColor="#043850"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    android:ems="10"
                    app:layout_constraintWidth_percent=".8"
                    android:elevation="3dp"
                    android:text="Student Information Details"

                    android:padding="9dp" />

                <EditText
                    android:id="@+id/student_first_name"
                    android:drawablePadding="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:drawableLeft="@drawable/ic_email"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:ems="10"
                    app:layout_constraintWidth_percent=".8"
                    android:elevation="3dp"
                    android:hint="First Name"
                    android:background="@drawable/edittext_background"
                    android:padding="9dp" />

                <EditText
                    android:id="@+id/student_last_name"
                    android:drawablePadding="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:drawableLeft="@drawable/ic_email"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:ems="10"
                    app:layout_constraintWidth_percent=".8"
                    android:elevation="3dp"
                    android:hint="Last Name"
                    android:background="@drawable/edittext_background"
                    android:padding="9dp" />

                <EditText
                    android:id="@+id/student_middle_name"
                    android:drawablePadding="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:drawableLeft="@drawable/ic_email"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:ems="10"
                    app:layout_constraintWidth_percent=".8"
                    android:elevation="3dp"
                    android:hint="Middle Name"
                    android:background="@drawable/edittext_background"
                    android:padding="9dp" />

                <EditText
                    android:id="@+id/student_dob"
                    android:drawablePadding="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:drawableLeft="@drawable/ic_calendar_svgrepo_com"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:ems="10"
                    app:layout_constraintWidth_percent=".8"
                    android:elevation="3dp"
                    android:hint="Date Of Birth"
                    android:background="@drawable/edittext_background"
                    android:padding="9dp" />

                <EditText
                    android:id="@+id/student_email_upload"
                    android:drawablePadding="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:drawableLeft="@drawable/ic_email"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:ems="10"
                    app:layout_constraintWidth_percent=".8"
                    android:elevation="3dp"
                    android:hint="E-mail"
                    android:background="@drawable/edittext_background"
                    android:padding="9dp" />

                <EditText
                    android:id="@+id/student_phone_number"
                    android:drawablePadding="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:drawableLeft="@drawable/ic_phone"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:ems="10"
                    android:inputType="number"
                    app:layout_constraintWidth_percent=".8"
                    android:elevation="3dp"
                    android:hint="Phone number"
                    android:background="@drawable/edittext_background"
                    android:padding="9dp" />

                <EditText
                    android:id="@+id/student_10th_marks"
                    android:drawablePadding="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:drawableLeft="@drawable/ic_percentage_svgrepo_com"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:ems="10"
                    android:inputType="number"
                    app:layout_constraintWidth_percent=".8"
                    android:elevation="3dp"
                    android:hint="10th Marks"
                    android:background="@drawable/edittext_background"
                    android:padding="9dp" />
                <EditText
                    android:id="@+id/student_12th_marks"
                    android:drawablePadding="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:drawableLeft="@drawable/ic_percentage_svgrepo_com"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:ems="10"
                    android:inputType="number"
                    app:layout_constraintWidth_percent=".8"
                    android:elevation="3dp"
                    android:hint="12th Marks"
                    android:background="@drawable/edittext_background"
                    android:padding="9dp" />


                <Button
                    android:id="@+id/student_basic_information_btn"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/corners"
                    android:gravity="center|center_horizontal|center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="Submit"
                    app:backgroundTint="#043850" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>