<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#A4CEEF"
    android:layout_height="match_parent"
    tools:context=".Institute.Institute_menu"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:orientation="vertical">
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center|center_vertical"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"

        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|center_vertical"
            android:orientation="vertical"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="80dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center|center_vertical"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dip"
                    android:layout_weight="0.5"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    android:id="@+id/basic_information"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="3dp"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="5dp"
                    tools:ignore="MissingConstraints"
                    >

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:padding="10dp"
                        android:src="@drawable/basic_information" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:text="Basic Information"
                        android:textAlignment="center"
                        android:textColor="#043850"
                        android:textStyle="bold"
                        />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dip"
                    android:layout_weight="0.5"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    android:id="@+id/Faculty"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="3dp"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="5dp"
                    tools:ignore="MissingConstraints"
                    >

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:padding="10dp"
                        android:src="@drawable/faculty" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:text="Faculty"
                        android:textAlignment="center"
                        android:textColor="#043850"
                        android:textStyle="bold"/>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center|center_vertical"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dip"
                    android:layout_weight="0.5"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    android:id="@+id/Syllabus"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="3dp"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="5dp"
                    tools:ignore="MissingConstraints"
                    >

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:padding="10dp"
                        android:src="@drawable/syllabus" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:textAlignment="center"
                        android:textColor="#043850"
                        android:textStyle="bold"
                        android:text="Syllabus"/>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="0dip"
                    android:layout_weight="0.5"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    android:id="@+id/Campus"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="3dp"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="5dp"
                    tools:ignore="MissingConstraints"
                    >

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:textColor="#043850"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:text="Campus"/>

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:padding="10dp"
                        android:src="@drawable/campus" />
                </androidx.cardview.widget.CardView>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center|center_vertical"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dip"
                    android:layout_weight="0.5"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    android:id="@+id/Hostel"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="3dp"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="5dp"
                    tools:ignore="MissingConstraints"
                    >

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:padding="10dp"
                        android:src="@drawable/hostel" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:textColor="#043850"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:text="Hostel"/>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="0dip"
                    android:layout_weight="0.5"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    android:id="@+id/Fee_structure"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="3dp"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="5dp"
                    tools:ignore="MissingConstraints"
                    >

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:padding="10dp"
                        android:src="@drawable/payment" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:textColor="#043850"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:text="Fee Structure"/>
                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>