<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Student.Student_institute_onclick">

    <TextView
        android:id="@+id/hometoolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_gravity="start"
        android:background="#3049e6"
        android:text="Institute Details"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        tools:ignore="MissingConstraints,RtlCompat" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="70dp">

            <TextView
                android:id="@+id/display_institute_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hometoolbar"
                android:layout_marginTop="70dp"
                app:layout_constraintTop_toBottomOf="@+id/hometoolbar"
                app:layout_constraintVertical_bias="0.0"
                tools:ignore="MissingConstraints,NotSibling"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/black"/>


            <TextView
                android:id="@+id/display_institute_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/display_institute_name"
                android:layout_marginTop="70dp"
                app:layout_constraintTop_toBottomOf="@+id/display_institute_name"
                app:layout_constraintVertical_bias="0.0"
                tools:ignore="MissingConstraints,NotSibling"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>


            <TextView
                android:id="@+id/display_institute_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/display_institute_email"
                android:layout_marginTop="70dp"
                app:layout_constraintTop_toBottomOf="@+id/display_institute_email"
                app:layout_constraintVertical_bias="0.0"
                tools:ignore="MissingConstraints,NotSibling"
                android:textSize="20sp"
                android:textStyle="italic"
                android:textColor="@color/black"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/display_institute_courses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/display_institute_about"
                android:layout_marginTop="70dp"
                app:layout_constraintTop_toBottomOf="@+id/display_institute_about"
                app:layout_constraintVertical_bias="0.0"
                tools:ignore="MissingConstraints,NotSibling"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>